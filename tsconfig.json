{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~elements": [
        "components/elements"
      ],
      "~elements/*": [
        "components/elements/*"
      ],
      "~layouts/*": [
        "components/layouts/*"
      ],
      "~views/*": [
        "components/views/*"
      ],
      "~icons": [
        "icons"
      ],
      "~icons/*": [
        "icons/*"
      ],
      "~hooks/*": [
        "hooks/*"
      ],
      "~hooks": [
        "hooks"
      ],
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}